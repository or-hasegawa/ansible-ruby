# For advice on how to change settings please see
# http://dev.mysql.com/doc/refman/5.6/en/server-configuration-defaults.html
# *** DO NOT EDIT THIS FILE. It's a template which will be copied to the
# *** default location during install, and will be replaced if you
# *** upgrade to a newer version of MySQL.

[mysqld]

# Remove leading # and set to the amount of RAM for the most important data
# cache in MySQL. Start at 70% of total RAM for dedicated server, else 10%.
innodb_buffer_pool_size = {{ my_cnf.mysqld.innodb_buffer_pool_size }}

# Remove leading # to turn on a very important data integrity option: logging
# changes to the binary log between backups.
# log_bin

# These are commonly set, remove the # and set as required.
# basedir = .....
datadir = {{ my_cnf.mysqld.datadir }}
port = {{ my_cnf.mysqld.port }}
# server_id = .....
socket = {{ my_cnf.mysqld.socket }}
user = {{ my_cnf.mysqld.user }}
log_error = {{my_cnf.mysqld.log_error}}
general_log = {{ my_cnf.mysqld.general_log }}
general_log_file = {{ my_cnf.mysqld.general_log_file }}
log_output = {{ my_cnf.mysqld.log_output }}
character-set-server = {{ my_cnf.mysqld.character_set_server }}
skip-character-set-client-handshake
# slow query
slow_query_log = {{ my_cnf.mysqld.slow_query_log }}
slow_query_log_file = {{ my_cnf.mysqld.slow_query_log_file }}
long_query_time = {{ my_cnf.mysqld.long_query_time }}

# Remove leading # to set options mainly useful for reporting servers.
# The server defaults are faster for transactions and fast SELECTs.
# Adjust sizes as needed, experiment to find the optimal values.
# join_buffer_size = 128M
# sort_buffer_size = 2M
# read_rnd_buffer_size = 2M 

sql_mode={{ my_cnf.mysqld.sql_mode }}


[client]
port = {{ my_cnf.client.port }}
socket = {{ my_cnf.client.socket }}

[mysql]
default-character-set = {{ my_cnf.mysql.default_character_set }}

[mysqldump]
default-character-set = {{ my_cnf.mysqldump.default_character_set }}
quick
